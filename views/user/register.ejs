  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {

      background-image: linear-gradient(to bottom, #fff, rgb(0, 109, 172));
    }

    .contain {
      position: absolute;
      transform: scaleX(10%);
      display: flex;
      align-items: center;
      justify-content: center;
      height: 650px;
      background-color: #fff;
      transition: height 0.2s ease;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -1%);
    }

    .contain {
      position: relative;
      max-width: 430px;
      width: 100%;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px 3px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      border: 2px solid rgb(64, 137, 139);
      margin: 0 20px;
      margin-bottom: 80px;
    }

    .contain .form {

      width: 50%;
      padding: 30px;
      background-color: #fff;
      transition: margin-left 0.18s ease;
    }

    .contain.active .forms {
      height: 600px;
    }

    .contain .form .title {
      position: absolute;
      left: 30%;
      font-size: 27px;
      font-weight: 600;
    }

    .form .title::before {
      content: '';
      position: absolute;
      left: 0;
      bottom: 0;
      height: 3px;
      width: 30px;
      background-color: #4070f4;
      border-radius: 25px;
    }

    .form .input-field {
      position: relative;
      height: 50px;
      width: 100%;
      margin-top: 20px;
    }

    .input-field input {
      position: absolute;
      height: 50px;
      width: 300px;
      top: 40px;
      left: -50%;
      /* align-items: center; */
      /* justify-content: center; */
      /* padding: 0 35px; */
      border: none;
      outline: none;
      font-size: 16px;
      border-bottom: 2px solid #ccc;
      border-top: 2px solid transparent;
      transition: all 0.2s ease;
    }

    .input-field input:is(:focus, :valid) {
      border-bottom-color: #4070f4;
    }

    .form .button {
      margin-top: 35px;
    }

    .form .button input {
      border: none;
      color: #fff;
      font-size: 17px;
      font-weight: 500;
      letter-spacing: 1px;
      border-radius: 6px;
      background-color: #4070f4;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .button input:hover {
      background-color: #265df2;
    }

    .form .text {
      position: absolute;
      top: 87.5%;
      color: #0f0202;
      font-size: 15px;
      /* overflow: hidden; */
    }

    .form a.text {
      /* margin-top: 10%; */
      transform: translate(-15%);
      position: absolute;
      font-size: 12px;
      /* font-weight: bold; */
      color: #4070f4;
      text-decoration: none;
      display: flex;
      /* flex-wrap: wrap; */
      /* flex-direction: column; */
      left: 110%;
      top: 3.5px;
      /* left: 0; */
      /* flex-wrap: wrap; */
    }

    .form a:hover {
      text-decoration: underline;
    }


    .contain .signup {
      opacity: 1;
      transition: opacity 0.09s ease;
    }

    .contain.active .signup {
      opacity: 1;
      transition: opacity 0.2s ease;
    }

    
